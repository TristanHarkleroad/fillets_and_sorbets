<div class="container">

    <div class="jumbotron">
        <h1>Welcome To Burger Town!</h1>
        <br>
        <h2>Sink your teeth into these selections</h2>
        <panel>
            <form class="create-form">
                <div class="form-group">
                    <label for="newburger">Made fresh for you</label>
                    {{!-- <input type="text" id="newburger" name="burger"> --}}
                    <select data-placeholder="" id="newburger" name="burger">
                        <option value="Nothing Selected" selected>Choose a Meal Below</option>
                        <option value="KrustyBurger">Krusty Burger</option>
                        <option value="GuavaLava">Guava Lava Burger</option>
                        <option value="Jamaican">Jamaican Me Crazy Sandwich</option>
                        <option value="DublinDouble">The Dublin Double</option>
                        <option value="WhatThePork">What The Pork Sandwich</option>
                        <option value="KickinChicken">Kickin' Chicken Sandwich</option>
                        <option value="ShouldaWouldaGhouda">Shoulda Woulda Ghouda Burger</option>
                    </select>

                    <button type="submit" class="btn btn-dark" id="addburger">
                        <span class="fa fa-burger">Add</span>
                    </button>
                </div>
            </form>
        </panel>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="leftside"><strong>Order A Burger</strong>
                    <p>Eat up and enjoy!</p>
                </div>
                <div class="panel-body">

                    <ul>
                        {{#each burgers}}
                        {{#unless devoured}}

                        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                        <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"><span class="fa fa-usd"></span></button>
                        <hr>
                        {{/unless}}
                        {{/each}}
                    </ul>

                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="rightside"><strong>Enjoy your meal?</strong>
                    <p>Make sure to remove tour trash when you leave, thank you!</p>
                </div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                        <button type="button" class="trashburger btn btn-danger" id="trashbutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"><span class="fa fa-trash"></span></button>
                        <hr>
                        {{/if}}
                        {{/each}}
                    </ul>



                </div>
            </div>
        </div>

    </div>
    <!--endrow -->
</div>
<!--endcontainer -->